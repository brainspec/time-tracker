  gem 'sass-rails',   '~> 3.2.3'
  gem 'therubyracer', :platform => :ruby
  gem 'bootstrap-sass'
  gem 'uglifier', '>= 1.0.3'
end

gem 'coffee-rails', '~> 3.2.1'

gem 'jquery-rails'

gem 'mongoid', '~> 2.4'
gem 'bson_ext', '~> 1.5'

gem 'omniauth-37signals'

gem 'slim'

gem 'faraday'
gem 'faraday_middleware'

gem 'simple_form'

group :development, :test do
  gem 'rspec-rails'
end

